<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bolditalic"
                android:gravity="center"
                android:text="@string/check_in_details"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/adress"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTxtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="12dp"
                android:background="@drawable/stroke_bg"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/adress"
                android:padding="10dp"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/no_of_package_picked_up"
                android:textColor="@color/black"

                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTextBox"
                android:layout_width="match_parent"
                android:textSize="12dp"

                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/stroke_bg"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"

                android:hint="Enter here"
                android:inputType="number"
                android:padding="8dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/no_of_package_dropped_off"
                android:textColor="@color/black"

                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTextdropoff"
                android:layout_width="match_parent"
                android:textSize="12dp"

                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/stroke_bg"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/enter_here"
                android:inputType="number"

                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:padding="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/signature_here"
                android:textColor="@color/black"
                android:textSize="14dp" />


            <com.kyanogen.signatureview.SignatureView xmlns:sign="http://schemas.android.com/apk/res-auto"
                android:id="@+id/signature_view"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="20dp"
                sign:backgroundColor="#F8F7F7"
                sign:enableSignature="true"
                android:padding="5dp"
                sign:penColor="#000"
                sign:penSize="5dp" />
            <CheckBox
                android:id="@+id/not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="10dp"
                android:text="@string/not_available"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"

                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                />




        </LinearLayout>
    </RelativeLayout>

</ScrollView>


